{
  "extends": [
    "config:base",
    ":semanticCommits",
    ":combinePatchMinorReleases",
    ":enableVulnerabilityAlerts",
    ":automergeLinters",
    ":automergeTesters",
    ":automergeTypes",
    ":prConcurrentLimitNone",
    ":prConcurrentLimit20"
  ],
  "pip_requirements": {
    "fileMatch": ["requirements.txt", "requirements-test.txt"]
  },
  "packageRules": [
    {
      "packageRules": [
        {
          "matchDepTypes": ["devDependencies"],
          "automerge": true
        }
      ]
    },
    {
      "packagePatterns": ["node", "shellcheck", "pytest", "httpx"],
      "automerge": true
    }
  ]
}
